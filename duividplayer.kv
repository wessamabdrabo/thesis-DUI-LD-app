#:kivy 1.0
<FilterWidget>
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        padding: [0, 0, 0, 0]
        imageURL: self.imageURL
        title: self.title
        AsyncImage:
            source: root.imageURL
        Label:
            text: root.title
            text_size: self.size
            valign: 'top'
            halign: 'center'
            font_size: '35sp'
